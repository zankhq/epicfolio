---
import { SEO } from "astro-seo";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { pwaInfo } from "virtual:pwa-info";
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";

export interface Props {
	title?: string;
	bodyClass?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/meta/opengraph.png", Astro.site).toString();

const { title, bodyClass } = Astro.props;

const makeTitle = title ? title + " | " + "Astro starter" : "Astro starter template with Tailwind CSS and alpine js";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#ffffff" />

		<!-- Global CSS -->
		<link rel="stylesheet" href="/index.css" />

		<SEO
			title={makeTitle}
			description="Astro starter template with TailwindCSS and alpine js."
			canonical={canonicalURL}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: `Astro Starter Template`,
					image: resolvedImageWithDomain,
				},
				image: {
					alt: "Astro Homepage Screenshot",
				},
			}}
		/>

		<ViewTransitions />

		{pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
		<script src="/src/pwa.ts"></script>
	</head>
	<body class:list={["bg-primary-900 text-primary-50 h-screen", bodyClass]}>
		<Navbar />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
